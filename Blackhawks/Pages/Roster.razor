@page "/roster"
@using Microsoft.AspNetCore.Components.QuickGrid

<style>
	th {
		background-color: red;
	}

	button.col-title {
		color: white;
	}

	tr:nth-child(even) {
		background-color: gainsboro;
	}
</style>

<PageTitle>Roster</PageTitle>

<h1 class="heading-center">Blackhawks 2024/25 Roster</h1>

<div class="row main-article-content">
	<QuickGrid Title="Roster" Items="Players">
		<PropertyColumn Title="Name" Property="@(p => p.FullName)" Sortable="true" />
		<PropertyColumn Title="#" Property="@(p => p.DisplayShirtNumber)" Sortable="true" />
		<PropertyColumn Title="Pos" Property="@(p => p.Position)" Sortable="true" />
		<PropertyColumn Title="Sh/Ca" Property="@(p => p.Shoots)" Sortable="true" />
		<PropertyColumn Title="Ht" Property="@(p => p.DisplayHeight)" Sortable="true" />
		<PropertyColumn Title="Wt" Property="@(p => p.DisplayWeight)" Sortable="true" />
		<PropertyColumn Title="Born" Property="@(p => p.DisplayAge)" Sortable="true" />
		<PropertyColumn Title="Birthplace" Property="@(p => p.Birthplace)" Sortable="true" />
	</QuickGrid>
</div>